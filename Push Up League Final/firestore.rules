rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Anyone can read user profiles (for leaderboards)
      allow read: if true;

      // Authenticated users can create/update their own profile
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);

      // Never allow deletion
      allow delete: if false;
    }

    // Workouts collection
    match /workouts/{workoutId} {
      // Anyone can read workouts (for leaderboards and stats)
      allow read: if true;

      // Both authenticated and guest users can create workouts
      // Guests use anonymous IDs stored in localStorage
      allow create: if true;

      // Users can update their own workouts
      // For authenticated users: check auth.uid
      // For guests: trust the client (they can only access their own via client-side filtering)
      allow update: if isAuthenticated()
        ? resource.data.userId == request.auth.uid
        : true;

      // Never allow deletion (workouts should be locked, not deleted)
      allow delete: if false;
    }

    // Achievements collection
    match /achievements/{achievementId} {
      // Anyone can read achievements
      allow read: if true;

      // Both authenticated and guest users can create achievements
      allow create: if true;

      // Never allow updates or deletions (achievements are permanent)
      allow update: if false;
      allow delete: if false;
    }

    // Deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
