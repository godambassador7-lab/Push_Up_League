{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PushUpLeagueAdaptiveSchema",
  "type": "object",
  "properties": {
    "userState": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "level": {
          "type": "integer",
          "minimum": 1
        },
        "division": {
          "type": "string",
          "enum": [
            "Rookie",
            "Warrior",
            "Elite"
          ]
        },
        "goal": {
          "type": "string",
          "enum": [
            "Endurance",
            "Strength",
            "Hypertrophy",
            "Mixed"
          ]
        },
        "baselineMax": {
          "type": "integer",
          "minimum": 1
        },
        "readiness": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "injuryFlags": {
          "type": "object",
          "properties": {
            "wristPain": {
              "type": "boolean"
            },
            "shoulderPain": {
              "type": "boolean"
            },
            "elbowPain": {
              "type": "boolean"
            },
            "otherPain": {
              "type": "boolean"
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "userId",
        "division",
        "goal",
        "baselineMax"
      ]
    },
    "workoutHistory": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string"
          },
          "sessionId": {
            "type": "string"
          },
          "templateId": {
            "type": "string"
          },
          "variation": {
            "type": "string"
          },
          "sets": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "targetReps": {
                  "type": "integer"
                },
                "actualReps": {
                  "type": "integer"
                },
                "rir": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 10
                },
                "failed": {
                  "type": "boolean"
                }
              },
              "required": [
                "targetReps",
                "actualReps"
              ]
            }
          },
          "restSeconds": {
            "type": "integer",
            "minimum": 0
          },
          "timeSeconds": {
            "type": "integer",
            "minimum": 0
          },
          "painReported": {
            "type": "boolean"
          },
          "notes": {
            "type": "string"
          }
        },
        "required": [
          "date",
          "sessionId",
          "variation",
          "sets"
        ]
      }
    }
  },
  "required": [
    "userState",
    "workoutHistory"
  ]
}